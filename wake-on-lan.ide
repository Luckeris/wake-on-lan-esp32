// Enter your WiFi configuration, MAC address, and PC IP address
const char* ssid = "YOUR_SSID";  // Enter your WiFi network name
const char* password = "YOUR_PASSWORD";  // Enter your WiFi password
uint8_t macAddress[] = { 0x00, 0x00, 0x00, 0x00, 0x00, 0x00 };  // Enter the MAC address of the PC
IPAddress pcIP(192, 168, 1, 100);  // Enter the IP address of the PC (in the network you're using)

WebServer server(80);
WiFiUDP udp;

// Function to send Wake-on-LAN packet
void sendWOL() {
  const int wolPort = 9;
  byte magicPacket[102];
  memset(magicPacket, 0xFF, 6);
  for (int i = 1; i <= 16; i++) {
    memcpy(&magicPacket[i * 6], macAddress, 6);
  }
  udp.beginPacket("255.255.255.255", wolPort);
  udp.write(magicPacket, sizeof(magicPacket));
  udp.endPacket();
}

